{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Backend",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/backend/src/server.ts",
            "outFiles": [
                "${workspaceFolder}/backend/dist/**/*.js"
            ],
            "preLaunchTask": "tsc: build - backend/tsconfig.json",
            "sourceMaps": true,
            "cwd": "${workspaceFolder}/backend"
        }
    ]
} 